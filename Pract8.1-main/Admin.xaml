<Window x:Class="Практическая_Работа_8._1_РКИС.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практическая_Работа_8._1_РКИС"
        mc:Ignorable="d"
        Title="Admin" Height="450" Width="800">
    <Grid Background="#FF74F7E9">
        <Button Content="Поиск" HorizontalAlignment="Left" Margin="623,258,0,0" VerticalAlignment="Top" Height="53" Width="140" FontSize="17"/>
        <TextBox HorizontalAlignment="Center" Height="378" TextWrapping="Wrap" VerticalAlignment="Center" Width="752"/>
        <TextBox HorizontalAlignment="Left" Height="38" Margin="24,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="296" Background="White" Foreground="Black" Opacity="0.8" BorderThickness="5,5,5,5" FontSize="15"  RenderTransformOrigin="0.499,0.517"/>
        <Button Content="" HorizontalAlignment="Left" Margin="320,28,0,0" VerticalAlignment="Top" Height="38" Width="50" FontSize="17" BorderThickness="0,0,0,0">
            <Button.Background>
                <ImageBrush ImageSource="/icons8-search-50.png"/>
            </Button.Background>
        </Button>
        <ListBox Margin="24,64,480,28" d:ItemsSource="{d:SampleData ItemCount=5}" FontSize="15"/>
        <TextBox HorizontalAlignment="Left" Height="122" TextWrapping="Wrap" VerticalAlignment="Center" Width="375" Margin="372,0,0,0" BorderThickness="5,5,5,5" />
        <Button Content="Выход" HorizontalAlignment="Left" Height="32" Margin="675,42,0,0" VerticalAlignment="Top" Width="85" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-1.118"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.38"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Добавить запись" HorizontalAlignment="Left" Height="50" Margin="630,300,0,0" VerticalAlignment="Top" Width="117"/>
        <Button Content="Удалить запись" HorizontalAlignment="Left" Height="50" Margin="372,300,0,0" VerticalAlignment="Top" Width="113" RenderTransformOrigin="-0.439,0.617"/>
    </Grid>
</Window>
